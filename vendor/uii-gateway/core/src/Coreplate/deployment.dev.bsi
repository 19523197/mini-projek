---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: svc-{{ teamname }}-{{ appname }}-lumen
  labels:
    svc: svc-{{ teamname }}-{{ appname }}-lumen
    tier: backend
  namespace: {{ teamname }}-dev
spec:
  replicas: 1
  selector:
    matchLabels:
      svc: svc-{{ teamname }}-{{ appname }}-lumen
      tier: backend
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  revisionHistoryLimit: 5
  template:
    metadata:
      labels:
        svc: svc-{{ teamname }}-{{ appname }}-lumen
        tier: backend
    spec:
      imagePullSecrets:
        - name: gcr-uii-key
      containers:
        - name: svc-{{ teamname }}-{{ appname }}-lumen
          image: asia.gcr.io/uii-cloud-project/{{ teamname }}/backend/svc-{{ teamname }}-{{ appname }}-lumen:dev
          imagePullPolicy: Always
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              memory: 256Mi
          env:
            - name: APP_DEBUG
              value: "true"
            - name: APP_ENV
              value: "local"
            - name: DB_HOST
              value: "dbdev.bsi.io"
            - name: DB_PORT
              value: "6033"
            - name: DB_USERNAME
              value: "{{ dbdevuser }}"
            - name: DB_PASSWORD
              value: "{{ dbdevpass }}"
            - name: WORKER_PROCESSES
              value: "auto"
            - name: WORKER_CONNECTIONS
              value: "768"
            - name: PM_MAX_CHILDREN
              value: "40"
            - name: PM_START_SERVER
              value: "10"
            - name: PM_MIN_SPARE_SERVER
              value: "10"
            - name: PM_MAX_SPARE_SERVER
              value: "20"
            - name: MAX_EXECUTION_TIME
              value: "60"
            - name: PHP_MEMORY_LIMIT
              value: "128M"
            - name: PHP_OPCACHE_MEMORY
              value: "16"
          ports:
            - name: http-api
              containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: svc-{{ teamname }}-{{ appname }}-lumen
  labels:
    svc: svc-{{ teamname }}-{{ appname }}-lumen
    tier: backend
  namespace: {{ teamname }}-dev
  annotations:
    getambassador.io/config: |
      ---
      apiVersion: ambassador/v1
      kind:  Mapping
      name:  svc-{{ teamname }}-{{ appname }}-lumen-mapping
      prefix: /v1/{{ teamname }}-{{ appname }}
      rewrite: /public/api/v1
      service: svc-{{ teamname }}-{{ appname }}-lumen.{{ teamname }}-dev
      timeout_ms: 180000
spec:
  type: NodePort
  selector:
    svc: svc-{{ teamname }}-{{ appname }}-lumen
    tier: backend
  ports:
    - name: http
      port: 80
      targetPort: http-api
      protocol: TCP
